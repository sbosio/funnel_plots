.row
  .small-12.medium-6.large-4.columns
    %h3
      = titulo
      %small
        = accion
  .small-12.medium-6.large-8.columns
    - if defined?(botones)
      %ul.button-group.round.right
        - botones.each do |b|
          - if not b[:if].nil?
            - if b[:if]
              %li
                = link_to b[:texto], b[:ruta], method: (b[:metodo].present? ? b[:metodo].to_sym : :get), class: "boton_de_accion"
          - elsif not b[:unless].nil?
            - unless b[:unless]
              %li
                = link_to b[:texto], b[:ruta], method: (b[:metodo].present? ? b[:metodo].to_sym : :get), class: "boton_de_accion"
          - else
            %li
              = link_to b[:texto], b[:ruta], method: (b[:metodo].present? ? b[:metodo].to_sym : :get), class: "boton_de_accion"

      