%nav.top-bar{"data-topbar" => true}
  %ul.title-area
    %li.name
      %h1= link_to 'FunnelPLOTS', root_path
    %li.toggle-topbar.menu-icon
      %h1= link_to 'Menú', root_path
  .top-bar-section
    %ul.left
      = render 'layouts/links_navegacion'
    - if usuario_autenticado?
      %ul.right
        %li.has-dropdown
          = link_to usuario_actual.nombre_y_apellido, "#"
          %ul.dropdown
            %li
              = link_to "Perfil", edit_usuario_registration_path
            %li
              = link_to "Cerrar sesión", destroy_usuario_session_path, method: :delete
