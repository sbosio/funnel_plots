- if controller_name != 'sesiones'
  .row
    .small-12.medium-6.small-centered.columns
      = link_to "Iniciar sesión", new_session_path(resource_name)

- if devise_mapping.registerable? && controller_name != 'usuarios'
  .row
    .small-12.medium-6.small-centered.columns
      = link_to "Crear una cuenta", new_registration_path(resource_name)

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'usuarios'
  .row
    .small-12.medium-6.small-centered.columns
      = link_to "¿No recordás tu contraseña?", new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  .row
    .small-12.medium-6.small-centered.columns
      = link_to "¿No recibiste las instrucciones para confirmar tu cuenta?", new_confirmation_path(resource_name)

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  .row
    .small-12.medium-6.small-centered.columns
      = link_to "¿No recibiste las instrucciones para desbloquear tu cuenta?", new_unlock_path(resource_name)

- if devise_mapping.omniauthable?
  .row
    .small-12.medium-6.small-centered.columns
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Iniciar sesión con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
