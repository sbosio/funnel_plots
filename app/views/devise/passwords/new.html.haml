.row
  .small-12.medium-6.small-centered.columns
    %h3 ¿No recordás tu contraseña?

= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  .row
    .small-12.medium-6.small-centered.columns
      = devise_error_messages!
  .row
    .small-12.medium-6.small-centered.columns
      = f.input :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
  .row
    .small-12.medium-6.small-centered.columns
      = f.button :submit, "Reenviar las instrucciones"

= render "devise/shared/links"